{
  "name": "open-cobol",
  "version": "0.4.1",
  "description": "A node wrapper method to run COBOL code with open-cobol (Linux)",
  "main": "index.js",
  "files": [
    "lib",
    "index.js",
    "http.js",
    "Dockerfile",
    "Dockerfile-cn"
  ],
  "scripts": {
    "test": "ava",
    "start": "node ./http.js",
    "t:t": "ava ./tests/manual.test.js",
    "t:h": "ava ./tests/http.test.js",
    "t:u": "ava ./tests/util.test.js",
    "d": "ava ./tests/docker.test.js",
    "c": "node ./cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joel-chu/node-open-cobol.git"
  },
  "keywords": [
    "COBOL",
    "node",
    "node.js",
    "open-cobol",
    "linux",
    "docker"
  ],
  "author": "Joel Chu <joelchu@foxmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joel-chu/node-open-cobol/issues"
  },
  "homepage": "https://github.com/joel-chu/node-open-cobol#readme",
  "devDependencies": {
    "@to1source/request": "^0.9.4",
    "ava": "^3.13.0",
    "superkoa": "^1.0.3"
  },
  "dependencies": {
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "meow": "^7.1.1",
    "tmp": "^0.2.1",
    "which": "^2.0.2"
  },
  "ava": {
    "files": [
      "tests/**/*.test.js"
    ],
    "ignoredByWatcher": [
      "tests/fixtures/**/*",
      "lib/**/*"
    ],
    "verbose": true,
    "tap": false,
    "failFast": true
  },
  "bin": {
    "nodecobc": "./cli.js"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
